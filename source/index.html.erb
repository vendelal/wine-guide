<% data.wines.categories.each do |category| %>

  <h2 class="section-title">
    <img src="images/<%= category.image %>" class="category__image"/>
    <%= category.title %>
  </h2>

  <% category.wines.each do |wine| %>
    <h3><%= wine.title %></h3>
    <% wine.sections.each do |section| %>
      <p><strong><%= section.section_title %>:</strong> <%= section.section_content %></p>
    <% end %>
  <% end %>
<% end %>